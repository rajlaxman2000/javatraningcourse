<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" default-init-method="initMethod" default-destroy-method="destroyMethod">
	
	<bean id="employee" class="com.spring.scope.Employee" scope="singleton" >
		<property name="id" value="10"/>
		<property name="name" value="RajeshReddy"/>
		<property name="age" value="30"/>
	</bean>
   
    <bean id="student" class="com.spring.scope.Student" >
    	<property name="id" value="10"/>
		<property name="name" value="RajeshReddy"/>
    </bean>
    
</beans>